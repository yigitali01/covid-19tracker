<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.covid19tracker">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Covid19Tracker">
        <activity android:name=".AboutActivity"></activity>
        <activity android:name=".USDistrictData" />
        <activity android:name=".USEachStateData" />
        <activity android:name=".USStateData" />
        <activity android:name=".UnitedStatesData" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".EachCountryData" />
        <activity android:name=".CountryData" />
        <activity android:name=".IndiaEachDistrictData" />
        <activity android:name=".IndiaDistrictData" />
        <activity android:name=".IndiaEachStateData" />
        <activity android:name=".IndiaStateData" />
        <activity android:name=".IndiaData" />
        <activity android:name=".MainActivity" />
    </application>

</manifest>